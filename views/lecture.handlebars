<h2 class="page-header">{{lecture.title}}</h2>
<h5>With {{lecture.lecturer}}</h5>
<h4>{{lecture.description}}</h4>

{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<div class="qrWrapper">
    <img src="https://chart.googleapis.com/chart?cht=qr&chs=200x200&chl=CITY-REG:{{lecture.lectureID}}:{{lecture.title}}:{{lecture.lecturer}}">
</div>

{{#unless students}}
    <h4 class="page-header">Attendees</h4>
    <div class="alert alert-warning">No students registered yet!</div>
{{/unless}}

{{#if students}}
    <h4 class="page-header">Attendees: {{students.length}}</h4>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Student ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
        </tr>
        </thead>
    <tbody>
    {{#each students}}
        <tr>
            <th scope="row">{{studentID}}</th>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td><button type="button" class="btn btn-danger">Remove</button></td>
        </tr>
    {{/each}}
    </tbody>
    </table>
{{/if}}

<button type="button" class="btn btn-primary">Add Student</button>
{{#unless students}}
    <button type="button" class="btn btn-secondary">Download as .CSV</button>
{{/unless}}
{{#if students}}
    <button type="button" class="btn btn-primary">Download as .CSV</button>
{{/if}}
